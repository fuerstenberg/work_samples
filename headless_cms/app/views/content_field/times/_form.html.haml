= form_for content_field_form_url((form.global_content_type || form.content_type), form), as: :content_field, html: { class: "form-horizontal" } do |f|
  = render partial: "fields", object: f

  .form-group
    .col-sm-10.col-sm-offset-2
      .checkbox
        %label
          = f.check_box :date_only
          Date only

  = render partial: "required_field", object: f
  = render partial: "buttons", object: f
