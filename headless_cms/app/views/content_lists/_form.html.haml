= form_for [Current.customer, form], html: { class: "form-horizontal" } do |f|

  = render partial: "shared/errors", object: f

  .form-group
    = f.label :name, class: "control-label col-sm-2"
    .col-sm-10
      = f.text_field :name, class: "form-control", placeholder: "Content list name"

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit t('button.save'), class: "btn btn-primary-outline"
      - if f.object.new_record?
        = link_to t('button.cancel'), [Current.customer, :content_lists], class: "btn btn-default"
      - else
        = link_to t('button.cancel'), [Current.customer, f.object], class: "btn btn-default"
