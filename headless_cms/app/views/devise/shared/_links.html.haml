.btn-toolbar
  - if controller_name != 'sessions'
    = link_to t('.link_to.log_in'), new_session_path(resource_name), class: "btn btn-sm btn-default-outline"

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t('.link_to.sign_up'), new_registration_path(resource_name), class: "btn btn-sm btn-default-outline"

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t('.link_to.forgot_password'), new_password_path(resource_name), class: "btn btn-sm btn-default-outline"

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t('.link_to.didnt_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: "btn btn-sm btn-default-outline"

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to t('.link_to.didnt_receive_unlock_instructions'), new_unlock_path(resource_name), class: "btn btn-sm btn-default-outline"

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to t('.link_to.sign_in_with_provider', provider: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: "btn btn-sm btn-default-outline"
