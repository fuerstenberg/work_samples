= form_for [Current.customer, form], html: { class: "form-horizontal" } do |f|

  = render partial: "shared/errors", object: f

  .form-group
    = f.label :name, class: "control-label col-sm-2"
    .col-sm-10
      = f.text_field :name, class: "form-control", placeholder: "Your name"

  .form-group
    = f.label :email, class: "control-label col-sm-2"
    .col-sm-10
      = f.text_field :email, class: "form-control", placeholder: "Your email"

  .form-group
    = f.label :password, class: "control-label col-sm-2"
    .col-sm-10
      = f.password_field :password, class: "form-control", placeholder: "Your password"

  .form-group
    = f.label :password_confirmation, class: "control-label col-sm-2"
    .col-sm-10
      = f.password_field :password_confirmation, class: "form-control", placeholder: "Your password"

  %hr

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit t('button.save'), class: "btn btn-primary-outline"
      - if f.object.new_record?
        = link_to t('button.cancel'), :users, class: "btn btn-default"
      - else
        = link_to t('button.cancel'), f.object, class: "btn btn-default"
