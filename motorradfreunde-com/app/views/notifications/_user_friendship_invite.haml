%li.media.mb-2.px-3.py-2
  = image_tag notification.subject.avatar(:fill_100_100), alt: current_user, class: 'media-object d-flex align-self-start mr-3'
  .media-body
    = t("notifications.#{notification.notification_type}", user: link_to(notification.subject, notification.subject)).html_safe

    - unless notification.subject.friend_with?(notification.user)
      .media-body-actions.text-right
        = link_to [notification.subject, :friendships], method: :delete, class: 'btn btn-outline-secondary btn-sm' do
          = icon 'times'
          %span.sr-only Ablehnen

        = link_to [notification.subject, :friendships], method: :post,   class: 'btn btn-outline-success btn-sm' do
          = icon 'user-plus'
          Annehmen

