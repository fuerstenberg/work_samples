- resource = User.new
- resource_name = :user

= render 'social_buttons'

= form_for resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: 'off', role: 'form' } do |f|
  .form-group.row
    = f.label :name, class: 'col-sm-3 col-form-label'
    .col-sm-9
      = f.text_field :name, class: 'form-control', required: true, placeholder: true, autofocus: true

  .form-group.row
    = f.label :email, class: 'col-sm-3 col-form-label'
    .col-sm-9
      = f.email_field :email, class: 'form-control', required: true, placeholder: true

  .form-group.row
    = f.label :password, class: 'col-sm-3 col-form-label'
    .col-sm-9
      = f.password_field :password, class: 'form-control', required: true, placeholder: true

  .form-group.row
    = f.label :password_confirmation, class: 'col-sm-3 col-form-label'
    .col-sm-9
      = f.password_field :password_confirmation, class: 'form-control', required: true, placeholder: true

  .form-group.row
    .form-check.col-sm-9.offset-sm-3
      = f.label :terms_of_service, class: 'form-check-label' do
        = f.check_box :terms_of_service, class: 'form-check-input', required: true
        = I18n.t('mongoid.attributes.user.terms_of_service_html').html_safe

  .actions
    = f.submit class: 'btn btn-primary'

= render 'links'
