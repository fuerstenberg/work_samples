    .col-sm-9
      - Poi.hotel_ausstattung_attribute_names.each_with_index do |attribute, index|
        .form-check
          = f.label attribute, class: 'form-check-label' do
            = f.check_box attribute, class: 'form-check-input'
            =t "mongoid.attributes.poi.#{attribute}"

  .form-group.row.hotel_essen
    = f.label 'Essen', class: 'col-sm-3 col-form-check-label'
    .col-sm-9
      - Poi.hotel_essen_attribute_names.each_with_index do |attribute, index|
        .form-check
          = f.label attribute, class: 'form-check-label' do
            = f.check_box attribute, class: 'form-check-input'
            =t "mongoid.attributes.poi.#{attribute}"

  .form-group.row.hotel_service
    = f.label 'Service', class: 'col-sm-3 col-form-check-label'
    .col-sm-9
      - Poi.hotel_service_attribute_names.each_with_index do |attribute, index|
        .form-check
          = f.label attribute, class: 'form-check-label' do
            = f.check_box attribute, class: 'form-check-input'
            =t "mongoid.attributes.poi.#{attribute}"
