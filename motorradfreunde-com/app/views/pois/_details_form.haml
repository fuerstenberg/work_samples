- f = details_form
- if user_signed_in? and current_user.admin?
  .form-group.row
    = f.label 'Admin Einstellungen', class: 'col-sm-3 col-form-check-label'
    .col-sm-9
      .form-check
        = f.label :published, class: 'form-check-label' do
          = f.check_box :published, class: 'form-check-input'
          ver√∂ffentlicht

      .form-check
        = f.label :premium, class: 'form-check-label' do
          = f.check_box :premium, class: 'form-check-input'
          Premium

  .form-group.row
    = f.label :meta_inspector_url, class: 'col-sm-3 col-form-label'
    .col-sm-9
      = f.url_field :meta_inspector_url, class: 'form-control'
      - if f.object.meta_inspector_url.present?
        %small= link_to f.object.meta_inspector_url, f.object.meta_inspector_url, target: :_blank

